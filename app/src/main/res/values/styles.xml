<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Application theme. -->

    <style name="AppTheme" mce_bogus="1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 隐藏标题栏 -->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!-- 窗口透明的状态栏 -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 窗口透明的导航栏 -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAnimationStyle">@style/animation_activity</item>
    </style>
    <style name="AppMainTheme" mce_bogus="1" parent="Base.Theme.AppCompat">
        <item name="android:windowAnimationStyle">@style/animation_main_activity</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="SAppTheme" mce_bogus="1" parent="AppTheme">
        <!--<item name="android:windowBackground">@drawable/bg_start</item>-->
    </style>

    <style name="animation_activity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_activity_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_activity_stay</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_activity_stay</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_activity_right_out</item>
    </style>

    <style name="animation_main_activity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_activity_up_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_activity_stay</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_activity_stay</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_activity_right_out</item>
    </style>

    <!-- 普通的说明性内容-title -->
    <style name="text_common_intro_title">
