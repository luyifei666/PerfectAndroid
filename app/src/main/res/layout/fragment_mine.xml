<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/hs_bg">
    <include layout="@layout/a_title_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginBottom="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="张三"
                android:padding="20dp"
                android:textSize="20sp"
                android:layout_gravity="left"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/my_zhgl"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="云南民族中学"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:layout_gravity="left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="初一年级 234班"
                android:paddingLeft="20dp"
                android:textSize="16sp"
                android:layout_gravity="right"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_margin="10dp"
            android:paddingRight="5dp"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/my_zhgl"
            android:drawableRight="@drawable/right_arrow"
            android:text="账号管理"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/my_jbzl"
            android:drawableRight="@drawable/right_arrow"
            android:text="基本资料"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:layout_margin="10dp"
            android:paddingRight="5dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/my_yhsz"
            android:drawableRight="@drawable/right_arrow"
            android:text="用户设置"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_gywm"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:paddingLeft="5dp"
            android:drawablePadding="10dp"
            android:paddingRight="5dp"
            android:drawableLeft="@drawable/my_gywm"
            android:drawableRight="@drawable/right_arrow"
            android:text="关于我们"
            android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
