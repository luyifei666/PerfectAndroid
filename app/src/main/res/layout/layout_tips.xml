<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_tips"
        android:visibility="gone"
        android:background="@color/blue_1_205791"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:id="@+id/iv_tips_up"
            android:layout_width="wrap_content"
            android:layout_margin="15dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_vertical">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <ImageView
                    android:id="@+id/iv_tips_icon"
                    android:layout_width="wrap_content"
                    android:background="@drawable/ic_empty_page"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_tips_text"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="抱歉,没有数据了.."
                    android:gravity="center"
                    android:textColor="@color/text_first"
                    android:textSize="@dimen/textsize_18sp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>