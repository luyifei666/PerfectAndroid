<?xml version="1.0" encoding="utf-8"?>
<maitong.com.perfect.custorm.MainBottomBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/maintabgb"
        android:gravity="bottom">
        <LinearLayout
            android:id="@+id/ll_news"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="50dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_news"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <ImageView
                    android:id="@+id/iv_news_new"
                    android:background="@drawable/icon_notice"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
            </FrameLayout>
            <TextView
                android:id="@+id/tv_news"
                android:textSize="11sp"
                android:text="课表"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_chats"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="50dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_chats"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <ImageView
                    android:id="@+id/iv_chats_new"
                    android:background="@drawable/icon_notice"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
            </FrameLayout>
            <TextView
                android:id="@+id/tv_chats"
                android:textSize="11sp"
                android:text="家校通"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="50dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_main"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <ImageView
                    android:id="@+id/iv_main_new"
                    android:background="@drawable/icon_notice"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
            </FrameLayout>
            <TextView
                android:id="@+id/tv_main"
                android:textSize="11sp"
                android:text="学校"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
